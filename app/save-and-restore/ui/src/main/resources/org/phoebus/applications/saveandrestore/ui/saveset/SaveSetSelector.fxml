<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="400.0" minWidth="400.0" prefHeight="550.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.phoebus.applications.saveandrestore.ui.saveset.SaveSetSelectionController">
   <children>
      <Label text="Select a saveset or choose &quot;Create a new saveset&quot;:">
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Label>
      <TreeView fx:id="treeView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="createFolderButton" mnemonicParsing="false" text="Create a new folder">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></Button>
            <ButtonBar maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <buttons>
                  <Button cancelButton="true" mnemonicParsing="false" onAction="#close" text="Cancel" />
                  <Button fx:id="chooseButton" defaultButton="true" mnemonicParsing="false" text="Choose" />
               </buttons>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ButtonBar>
         </children>
      </HBox>
   </children>
</VBox>
